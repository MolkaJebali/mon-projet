<!DOCTYPE html>
<html>
<head>
    <title>Modifier l'Auteur</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <h1>Modifier l'Auteur : {{ author.username }}</h1>
        
        {{ form_start(form) }}
            <div class="mb-3">
                {{ form_label(form.username) }}
                {{ form_widget(form.username) }}
                {{ form_errors(form.username) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.email) }}
                {{ form_widget(form.email) }}
                {{ form_errors(form.email) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.nb_books) }}
                {{ form_widget(form.nb_books) }}
                {{ form_errors(form.nb_books) }}
            </div>
            <button type="submit" class="btn btn-primary">Modifier</button>
        {{ form_end(form) }}
        
        <a href="{{ path('app_author_list') }}" class="btn btn-secondary mt-3">← Retour à la liste</a>
    </div>
</body>
</html>