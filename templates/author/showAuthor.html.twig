{# templates/author/showAuthor.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <title>Détails de l'Auteur</title>
</head>
<body>
    <h1>Détails de l'Auteur</h1>
    
    {% if author %}
        <img src="{{ asset(author.picture) }}" alt="{{ author.username }}" width="100">
        <h2>{{ author.username }}</h2>
        <p><strong>Email:</strong> {{ author.email }}</p>
        <p>Nombre de livres: {{ author.nb_books }}</p> 
        
        <a href="{{ path('app_author_list') }}">← Retour à la liste</a>
    {% else %}
        <p>Auteur non trouvé.</p>
    {% endif %}
</body>
</html>